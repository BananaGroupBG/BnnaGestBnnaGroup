<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.bananagroup.models.Proyecto" table="proyecto">
		<id name="pid">
			<generator class="assigned"></generator>
		</id>

		<property name="titulo"></property>
		<property name="descripcion"></property>
        <property name="fechaI"></property>
		<property name="responsable"></property>
        <property name="activo"></property>
		<property name="listaTareas"></property>

	</class>

</hibernate-mapping>  